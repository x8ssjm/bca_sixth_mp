<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".classui2.BankProfileActivity"
    android:fillViewport="true">

    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:orientation="vertical"
        android:background="#FFF5F7FA">

        <!-- TOP PROFILE SECTION         -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/pfp"
                android:background="@drawable/bg_circle_placeholder"
                android:scaleType="centerCrop" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="12dp"
                android:orientation="vertical">

                <TextView
                    android:text="Hello, Julie"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#FF000000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="Welcome to your wallet"
                    android:textSize="13sp"
                    android:textColor="#88000000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <ImageButton
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/notification"
                android:background="@drawable/bg_circle_placeholder" />

        </LinearLayout>

<!--        balance card-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:background="@drawable/bg_card_rounded">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:text="USD"
                    android:textSize="12sp"
                    android:background="@drawable/bg_chip"
                    android:textColor="#FF000000"
                    android:padding="6dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="**** 5462, Exp 08/26"
                    android:textSize="12sp"
                    android:textColor="#88000000"
                    android:layout_marginStart="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <TextView
                    android:text="VISA"
                    android:textStyle="bold"
                    android:textColor="#FF0047FF"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <TextView
                android:text="Your balance"
                android:textSize="13sp"
                android:textColor="#88000000"
                android:layout_marginTop="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:text="$3,200.00"
                android:textSize="32sp"
                android:textStyle="bold"
                android:textColor="#FF000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:gravity="center"
                android:orientation="vertical"
                android:background="@drawable/bg_add_money">

                <TextView
                    android:text="+"
                    android:textSize="24sp"
                    android:textColor="#FFFFFFFF"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="Add money"
                    android:textSize="13sp"
                    android:textColor="#FFFFFFFF"
                    android:layout_marginTop="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:gravity="center"
                android:orientation="vertical"
                android:background="@drawable/bg_white_rounded">

                <TextView
                    android:text="⇗"
                    android:textSize="20sp"
                    android:textColor="#FF000000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="Transfer"
                    android:textSize="13sp"
                    android:textColor="#FF000000"
                    android:layout_marginTop="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="64dp"
                android:layout_height="80dp"
                android:gravity="center"
                android:orientation="vertical"
                android:background="@drawable/bg_white_rounded">

                <TextView
                    android:text="⋮"
                    android:textSize="20sp"
                    android:textColor="#FF000000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:text="Recent recipients"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#FF000000"
            android:layout_marginTop="24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp">

            <ImageView
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_marginEnd="12dp"
                android:src="@drawable/user"
                android:background="@drawable/bg_circle_placeholder" />

            <ImageView
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_marginEnd="12dp"
                android:src="@drawable/user"
                android:background="@drawable/bg_circle_placeholder" />

            <ImageView
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_marginEnd="12dp"
                android:src="@drawable/user"
                android:background="@drawable/bg_circle_placeholder" />

            <ImageView
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_marginEnd="12dp"
                android:src="@drawable/user"
                android:background="@drawable/bg_circle_placeholder" />

            <ImageView
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:src="@drawable/user"
                android:background="@drawable/bg_circle_placeholder" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Transactions"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#FF000000" />

            <TextView
                android:text="View all"
                android:textSize="13sp"
                android:textColor="#FF888888"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:padding="12dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/bg_white_rounded">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_launcher_foreground" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="12dp"
                android:orientation="vertical">

                <TextView
                    android:text="Netflix"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="#FF000000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="12 Aug, 02.11 pm"
                    android:textSize="12sp"
                    android:textColor="#FF888888"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <TextView
                android:text="- $18.60"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#FF000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:padding="12dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/bg_white_rounded">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_launcher_foreground" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="12dp"
                android:orientation="vertical">

                <TextView
                    android:text="Dior"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="#FF000000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="10 Aug, 10.23 am"
                    android:textSize="12sp"
                    android:textColor="#FF888888"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <TextView
                android:text="- $256.40"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#FF000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>

</ScrollView>